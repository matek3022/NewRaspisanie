<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/survey_navigation_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_parent"
        app:cardBackgroundColor="@color/nothingColor"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_mini"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_marginBottom="@dimen/default_padding_mini">
        <RelativeLayout
            android:padding="@dimen/default_padding_mini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/TextViewStyle"
                android:fontFamily="sans-serif-light"
                android:textSize="10sp"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/type"
                android:id="@+id/time"
                tools:text="8:00-9:35"/>
            <TextView
                style="@style/TextViewStyle"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/name"
                tools:text="Основы управленчской деятельности"/>
            <TextView
                style="@style/TextViewStyle"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@+id/prepod_name"
                android:layout_alignParentLeft="true"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:id="@+id/type"
                tools:text="Лекция"/>
            <TextView
                style="@style/TextViewStyle"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:id="@+id/prepod_name"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/name"
                tools:text="Какаято Какаятовна"/>
            <TextView
                style="@style/TextViewStyle"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:layout_below="@id/prepod_name"
                android:layout_alignParentRight="true"
                android:id="@+id/auditory"
                tools:text="415-14к"/>
            <TextView
                android:id="@+id/extended"
                style="@style/TextViewStyle"
                android:textSize="12sp"
                android:layout_below="@+id/prepod_name"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>