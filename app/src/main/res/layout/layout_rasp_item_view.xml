<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/survey_navigation_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_padding_mini"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_marginTop="@dimen/default_padding_mini"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/nothingColor"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding_mini">

            <TextView
                android:id="@+id/time"
                style="@style/TextViewStyle"
                android:layout_above="@+id/type"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-light"
                android:textSize="10sp"
                tools:text="8:00-9:35" />

            <TextView
                android:id="@+id/name"
                style="@style/TextViewStyle"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                tools:text="Основы управленчской деятельности" />

            <TextView
                android:id="@+id/type"
                style="@style/TextViewStyle"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/prepod_name"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true"
                android:textSize="12sp"
                tools:text="Лекция" />

            <TextView
                android:id="@+id/prepod_name"
                style="@style/TextViewStyle"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                tools:text="Какаято Какаятовна" />

            <TextView
                android:id="@+id/auditory"
                style="@style/TextViewStyle"
                android:layout_alignBottom="@+id/type"
                android:layout_alignParentRight="true"
                android:layout_below="@id/name"
                android:fontFamily="sans-serif-medium"
                android:gravity="bottom"
                android:singleLine="false"
                android:textSize="12sp"
                tools:text="415-14к\nasdasd" />

            <TextView
                android:id="@+id/extended"
                style="@style/TextViewStyle"
                android:layout_below="@+id/prepod_name"
                android:layout_centerHorizontal="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/info"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:singleLine="false"
                android:layout_below="@+id/type"
                android:textSize="14sp"
                android:paddingTop="8dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                tools:text="Пробный текст, который я пишу в этом маленьком окошечке, который пишется роооооовно по центру"/>

            <FrameLayout
                android:id="@+id/infoButtonContainer"
                android:visibility="gone"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="-10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="top|right"
                    android:id="@+id/infoButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_drop_down"/>
            </FrameLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>